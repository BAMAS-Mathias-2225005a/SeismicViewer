<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="700.0" prefWidth="1200.0"
            fx:controller="fr.amu.iut.sismicviewer.scenes.carte.CarteController" stylesheets="@styles.css"
            style="-fx-background-color: #040F16">
    <top>
        <VBox>
            <padding>
                <Insets bottom="20" top="10" />
            </padding>
            <HBox alignment="CENTER" spacing="200">
                <Button fx:id="carte" minHeight="40" minWidth="225" styleClass="topButton" text="CARTES" />
                <Button fx:id="dashboard" minHeight="40" minWidth="225" styleClass="topButton" text="DASHBOARD" />
                <Button fx:id="stats" minHeight="40" minWidth="225" styleClass="topButton" text="STATISTIQUES" />
            </HBox>
            <Separator>
                <padding>
                    <Insets top="10" />
                </padding>
            </Separator>
        </VBox>
    </top>
    <left>
        <VBox spacing="95" alignment="CENTER_LEFT" style="-fx-padding: 20;">
            <Label fx:id="lieuLabel" text="Lieu du séisme :" minHeight="20" minWidth="150" style="-fx-font-size: 18px; -fx-font-weight: bold;-fx-text-fill: #d58521"/>
            <Label fx:id="chocLabel" text="Choc du séisme :" minHeight="20" minWidth="150" style="-fx-font-size: 18px; -fx-font-weight: bold;-fx-text-fill: #d58521"/>
            <Label fx:id="dateLabel" text="Date du séisme :" minHeight="20" minWidth="150" style="-fx-font-size: 18px; -fx-font-weight: bold;-fx-text-fill: #d58521"/>
            <Label  fx:id="regionLabel" text="Région du séisme :" minHeight="20" minWidth="150" style="-fx-font-size: 18px; -fx-font-weight: bold;-fx-text-fill: #d58521"/>
        </VBox>
    </left>
</BorderPane>
