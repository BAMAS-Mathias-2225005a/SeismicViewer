<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import com.gluonhq.maps.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.shape.Rectangle?>
<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefHeight="700.0" prefWidth="1200.0"
            fx:controller="fr.amu.iut.sismicviewer.scenes.carte.CarteController" stylesheets="@styles.css"
            style="-fx-background-color: #040F16">
    <top>
        <VBox>
            <padding>
                <Insets bottom="20" top="10" />
            </padding>
            <HBox alignment="CENTER" spacing="200">
                <Button fx:id="carte" minHeight="40" minWidth="225" styleClass="topButton" text="CARTES" />
                <Button fx:id="dashboard" minHeight="40" minWidth="225" styleClass="topButton" text="DASHBOARD" />
                <Button fx:id="stats" minHeight="40" minWidth="225" styleClass="topButton" text="STATISTIQUES" />
            </HBox>
            <Separator>
                <padding>
                    <Insets top="10" />
                </padding>
            </Separator>
        </VBox>
    </top>
    <center>
        <StackPane>
            <children>
                <HBox alignment="CENTER" spacing="100">
                    <StackPane>
                        <Rectangle width="400" height="500" styleClass="square" />
                        <TableView fx:id="tableView" maxHeight="490" maxWidth="390">
                            <columns>
                                <TableColumn fx:id="region" text="Region"/>
                                <TableColumn fx:id="date" text="Date"/>
                                <TableColumn fx:id="intensite" text="Intensité"/>
                                <TableColumn fx:id="qie" text="QIE"/>
                                <TableColumn fx:id="choc" text="Choc"/>
                            </columns>

                        </TableView>
                    </StackPane>
                    <padding>
                        <Insets bottom="20"/>
                    </padding>
                    <MapView fx:id="mapView" maxWidth="600"/>
                </HBox>
                <VBox styleClass="alignVboxCarte">
                    <padding>
                        <Insets left="175"/>
                    </padding>
                    <Label  text="Séismes :" minHeight="20" minWidth="150" styleClass="titreCarte" />
                </VBox>

            </children>
        </StackPane>
    </center>

</BorderPane>
