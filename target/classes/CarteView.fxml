<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.maps.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<BorderPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #141b2d" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.sismicviewer.scenes.carte.CarteController">
    <top>
        <VBox>
            <padding>
                <Insets bottom="20" top="10" />
            </padding>
            <HBox alignment="CENTER" spacing="200">
                <Button fx:id="carte" minHeight="40" minWidth="225" styleClass="topButton" text="CARTES" />
                <Button fx:id="dashboard" minHeight="40" minWidth="225" styleClass="topButton" text="DASHBOARD" />
                <Button fx:id="stats" minHeight="40" minWidth="225" styleClass="topButton" text="STATISTIQUES" />
            </HBox>
            <Separator>
                <padding>
                    <Insets top="10" />
                </padding>
            </Separator>
        </VBox>
    </top>
    <center>
        <HBox alignment="TOP_CENTER" spacing="25">
            <VBox prefWidth="500">
                <HBox alignment="CENTER">
                    <Label text="Recherche de séisme" styleClass="titleRecherheCarte"/>
                </HBox>
                <HBox spacing="10">
                    <padding>
                        <Insets top="40"/>
                    </padding>
                    <ImageView fitHeight="30" fitWidth="30">
                        <Image url="iconDate.png"/>
                    </ImageView>
                    <Label text="DATE" styleClass="txtCategory"/>
                </HBox>
                <HBox styleClass="styleChamp" spacing="25" alignment="CENTER" prefHeight="40">
                    <Label text="De" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
                    <TextField fx:id="dateDe" styleClass="styleTextFieldCarte"/>
                    <HBox alignment="CENTER" spacing="25">
                        <Label text="À" style="-fx-text-fill: white; -fx-font-size: 20px;"/>
                        <TextField fx:id="dateA" styleClass="styleTextFieldCarte"/>
                    </HBox>
                </HBox>
                <HBox spacing="10">
                    <padding>
                        <Insets top="40"/>
                    </padding>
                    <ImageView fitHeight="30" fitWidth="30">
                        <Image url="iconRegion.png"/>
                    </ImageView>
                    <Label text="RÉGION" styleClass="txtCategory"/>
                </HBox>
                <HBox styleClass="styleChamp" spacing="25" alignment="CENTER" prefHeight="40">
                    <TextField fx:id="region" styleClass="styleTextFieldCarte" prefWidth="480"/>
                </HBox>
                <HBox spacing="10">
                    <padding>
                        <Insets top="40"/>
                    </padding>
                    <ImageView fitHeight="30" fitWidth="30">
                        <Image url="iconRayonRecherche.png"/>
                    </ImageView>
                    <Label text="RAYON DE RECHERCHE" styleClass="txtCategory"/>
                </HBox>
                <HBox styleClass="styleChamp" spacing="25" alignment="CENTER" prefHeight="40">
                    <TextField fx:id="latitude" styleClass="styleTextFieldCarte"/>
                    <TextField fx:id="longitude" styleClass="styleTextFieldCarte"/>
                    <TextField fx:id="rayon" styleClass="styleTextFieldCarte"/>
                </HBox>
                <HBox spacing="10">
                    <padding>
                        <Insets top="40"/>
                    </padding>
                    <ImageView fitHeight="30" fitWidth="30">
                        <Image url="iconMagnitude.png"/>
                    </ImageView>
                    <Label text="MAGNITUDE" styleClass="txtCategory"/>
                </HBox>
                <Slider fx:id="magnitude"/>
            </VBox>
            <MapView fx:id="mapView" prefWidth="600" />
        </HBox>
    </center>

</BorderPane>
