<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.maps.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.chart.BarChart?>
<?import javafx.scene.chart.CategoryAxis?>
<?import javafx.scene.chart.NumberAxis?>
<BorderPane fx:id="mainBP" prefHeight="1000" prefWidth="1900" style="-fx-background-color: #141b2d" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.sismicviewer.scenes.dashboard.DashboardControl">
    <top>
        <VBox>
            <padding>
                <Insets bottom="20" top="10" />
            </padding>
            <HBox alignment="CENTER" spacing="200">
                <Button fx:id="carte" minHeight="40" minWidth="225" styleClass="topButton" text="CARTES" />
                <Button fx:id="dashboard" minHeight="40" minWidth="225" styleClass="topButton" text="DASHBOARD" />
                <Button fx:id="stats" minHeight="40" minWidth="225" styleClass="topButton" text="STATISTIQUES" />
            </HBox>
            <Separator>
                <padding>
                    <Insets top="10" />
                </padding>
            </Separator>
        </VBox>
    </top>
    <center>
        <GridPane alignment="TOP_CENTER" hgap="45" vgap="75">
            <padding>
                <Insets top="30" />
            </padding>
            <HBox prefHeight="420" prefWidth="420"  style="-fx-background-color: #1f2941; -fx-background-radius: 10"></HBox>

            <GridPane vgap="20" hgap="20" GridPane.columnIndex="2" GridPane.rowSpan="2">
                <VBox prefWidth="200" prefHeight="200" style="-fx-background-color: #1f2941; -fx-background-radius: 10" GridPane.columnIndex="0" GridPane.rowIndex="0" alignment="CENTER" spacing="5">
                    <ImageView fitWidth="65" fitHeight="65">
                        <Image url="@img/TopSeisme.png"/>
                    </ImageView>
                    <Label styleClass="statsTitle">VILLE</Label>
                    <Label styleClass="statsNumber">0.0</Label>
                </VBox>
                <VBox prefWidth="200" prefHeight="200" style="-fx-background-color: #1f2941; -fx-background-radius: 10" GridPane.columnIndex="0" GridPane.rowIndex="1" alignment="CENTER" spacing="5">
                    <ImageView fitWidth="65" fitHeight="65">
                        <Image url="@img/bottomSeisme.png"/>
                    </ImageView>
                    <Label styleClass="statsTitle">VILLE</Label>
                    <Label styleClass="statsNumber">0.0</Label>
                </VBox>
                <VBox prefWidth="200" prefHeight="200" style="-fx-background-color: #1f2941; -fx-background-radius: 10" GridPane.columnIndex="1" GridPane.rowIndex="0" alignment="CENTER" spacing="5">
                    <ImageView fitWidth="65" fitHeight="65">
                        <Image url="@img/total.png"/>
                    </ImageView>
                    <Label styleClass="statsTitle">TOTAL DE SEISMES</Label>
                    <Label fx:id="totalSeismeLabel" styleClass="statsNumber">0.0</Label>
                </VBox>
                <VBox prefWidth="200" prefHeight="200" style="-fx-background-color: #1f2941; -fx-background-radius: 10" GridPane.columnIndex="1" GridPane.rowIndex="1" alignment="CENTER" spacing="5">
                    <ImageView fitWidth="65" fitHeight="65">
                        <Image url="@img/moyenne.png"/>
                    </ImageView>
                    <Label styleClass="statsTitle">MOYENNE</Label>
                    <Label styleClass="statsNumber">0.0</Label>
                </VBox>
            </GridPane>


            <VBox GridPane.columnIndex="3" GridPane.rowSpan="1" alignment="TOP_CENTER" prefHeight="40" style="-fx-background-color: #1f2941; -fx-background-radius: 10" spacing="20">
                <MapView fx:id="mapView" prefHeight="350" prefWidth="600" BorderPane.alignment="TOP_CENTER" />
                <RangeSlider fx:id="mainRangeSlider" min="1900" max="2023" lowValue="1700" highValue="2023" maxWidth="500"  showTickLabels="true" styleClass="range-slider" />
            </VBox>

            <VBox GridPane.rowIndex="1" GridPane.columnSpan="4" style="-fx-background-color: #1f2941; -fx-background-radius: 10" prefWidth="1450" prefHeight="300" alignment="CENTER">
                <Label text="Puissance des séismes récents" styleClass="textLabel"/>
                <BarChart fx:id="dashboardBarchart" prefWidth="1500" maxHeight="275">
                    <xAxis>
                        <CategoryAxis label="ANNEE"/>
                    </xAxis>
                    <yAxis>
                        <NumberAxis label="MAGNITUDE"/>
                    </yAxis>
                </BarChart>
            </VBox>

        </GridPane>
    </center>
    <bottom>
        <HBox alignment="CENTER" minWidth="500">
            <VBox alignment="BOTTOM_CENTER" spacing="10">
                <padding>
                    <Insets left="50" />
                </padding>
                <Button fx:id="importCSVButton" text="Choisir fichier CSV">
                    <font>
                        <Font name="Amiri" size="13.0" />
                    </font>
                </Button>
                <HBox fx:id="CSVErrorBox" alignment="CENTER" spacing="5" visible="false">
                    <ImageView fitHeight="20" fitWidth="20">
                        <Image url="@csvError.png" />
                    </ImageView>
                    <Label style="-fx-text-fill: #F02D3A" text="Merci d'ajouter un fichier CSV valide" />
                </HBox>
            </VBox>
        </HBox>
    </bottom>
    <right>

    </right>
</BorderPane>
