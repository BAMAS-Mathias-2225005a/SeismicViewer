<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.maps.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import org.controlsfx.control.*?>

<BorderPane fx:id="mainBP" prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #141b2d" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.sismicviewer.scenes.dashboard.DashboardControl">
    <top>
        <VBox>
            <padding>
                <Insets bottom="20" top="10" />
            </padding>
            <HBox alignment="CENTER" spacing="200">
                <Button fx:id="carte" minHeight="40" minWidth="225" styleClass="topButton" text="CARTES" />
                <Button fx:id="dashboard" minHeight="40" minWidth="225" styleClass="topButton" text="DASHBOARD" />
                <Button fx:id="stats" minHeight="40" minWidth="225" styleClass="topButton" text="STATISTIQUES" />
            </HBox>
            <Separator>
                <padding>
                    <Insets top="10" />
                </padding>
            </Separator>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" style="-fx-background-color: #1f2941" spacing="30" maxHeight="500" maxWidth="550">
            <HBox alignment="TOP_LEFT">
                <Label styleClass="textLabel" text="Repartition des séismes" textFill="WHITE">
                    <padding>
                        <Insets bottom="0" left="15" />
                    </padding>
                </Label>
            </HBox>
            <MapView fx:id="mapView" maxHeight="350" maxWidth="425" BorderPane.alignment="TOP_CENTER" />
            <RangeSlider fx:id="mainRangeSlider" min="1700" max="2023" lowValue="1700" highValue="2023" maxWidth="500"  showTickLabels="true" styleClass="range-slider" />
        </VBox>
    </center>
    <left>
        <HBox alignment="CENTER" minWidth="500">
            <VBox alignment="BOTTOM_CENTER" spacing="10">
                <padding>
                    <Insets bottom="30" />
                </padding>
                <Button fx:id="importCSVButton" text="Choisir fichier CSV">
                    <font>
                        <Font name="Amiri" size="13.0" />
                    </font>
                </Button>
                <HBox fx:id="CSVErrorBox" alignment="CENTER" spacing="5" visible="false">
                    <ImageView fitHeight="20" fitWidth="20">
                        <Image url="@csvError.png" />
                    </ImageView>
                    <Label style="-fx-text-fill: red" text="Merci d'ajouter un fichier CSV valide" />
                </HBox>
            </VBox>
        </HBox>
    </left>
    <right>
        <BorderPane prefHeight="413.0" prefWidth="331.0" BorderPane.alignment="CENTER">
            <top>
                <VBox alignment="TOP_CENTER" prefHeight="36.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Label text="Top des séismes" textFill="#f8f408" />
                        <Separator prefWidth="200.0" />
                    </children>
                </VBox>
            </top>
            <center>
                <ScrollPane prefHeight="200.0" prefWidth="225.0" BorderPane.alignment="CENTER">
                    <content>
                        <VBox fx:id="listeTopSeisme" prefHeight="338.0" prefWidth="328.0" />
                    </content>
                </ScrollPane>
            </center>
            <bottom>
                <VBox prefHeight="32.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <children>
                        <Separator prefWidth="200.0" />
                        <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="5.0">
                            <children>
                                <Button mnemonicParsing="false" text="10 An" onAction="#topSeisme10ans"/>
                                <Button mnemonicParsing="false" text="40 Ans" onAction="#topSeisme40ans"/>
                                <Button mnemonicParsing="false" text="100 Ans" onAction="#topSeisme100ans"/>
                            </children>
                            <VBox.margin>
                                <Insets />
                            </VBox.margin>
                        </HBox>
                    </children>
                </VBox>
            </bottom>
        </BorderPane>
    </right>
</BorderPane>
