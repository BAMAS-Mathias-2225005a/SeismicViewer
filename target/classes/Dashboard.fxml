<?xml version="1.0" encoding="UTF-8"?>

<?import com.gluonhq.maps.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import org.controlsfx.control.RangeSlider?>
<BorderPane fx:id="mainBP" prefHeight="700.0" prefWidth="1200.0" stylesheets="@styles.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="fr.amu.iut.sismicviewer.scenes.dashboard.DashboardControl"
            style="-fx-background-color: #040F16">
    <top>
        <VBox>
            <padding>
                <Insets bottom="20" top="10" />
            </padding>
            <HBox alignment="CENTER" spacing="200">
                <Button fx:id="carte" minHeight="40" minWidth="225" styleClass="topButton" text="CARTES" />
                <Button fx:id="dashboard" minHeight="40" minWidth="225" styleClass="topButton" text="DASHBOARD" />
                <Button fx:id="stats" minHeight="40" minWidth="225" styleClass="topButton" text="STATISTIQUES" />
            </HBox>
            <Separator>
                <padding>
                    <Insets top="10" />
                </padding>
            </Separator>
        </VBox>
    </top>
    <center>
        <VBox alignment="CENTER" style="-fx-background-radius:18" spacing="30">
            <MapView fx:id="mapView" maxHeight="350" maxWidth="425" BorderPane.alignment="TOP_CENTER" />
            <RangeSlider min="1500" max="2023" showTickLabels="true" lowValue="1500" highValue="2023" maxWidth="500" minHeight="50" styleClass="range-slider"/>
        </VBox>
    </center>
    <left>
        <HBox alignment="CENTER" minWidth="500">
            <VBox spacing="10" alignment="BOTTOM_CENTER">
                <padding>
                    <Insets bottom="30" />
                </padding>
                <Button fx:id="importCSVButton" text="Choisir fichier CSV">
                    <font>
                        <Font name="Amiri" size="13.0" />
                    </font>
                </Button>
                <HBox fx:id="CSVErrorBox" visible="false" alignment="CENTER" spacing="5">
                    <ImageView fitWidth="20" fitHeight="20">
                        <Image url="@csvError.png"/>
                    </ImageView>
                    <Label style="-fx-text-fill: red" text="Merci d'ajouter un fichier CSV valide" />
                </HBox>
            </VBox>
        </HBox>
    </left>
</BorderPane>
