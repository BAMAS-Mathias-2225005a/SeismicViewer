<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.chart.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="700.0" prefWidth="1200.0" style="-fx-background-color: #141B2D;" stylesheets="@styles.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="fr.amu.iut.sismicviewer.scenes.stats.StatsController">
    <top>
        <VBox>
            <padding>
                <Insets bottom="20" top="10"/>
            </padding>
            <HBox alignment="CENTER" spacing="200">
                <Button fx:id="carte" minHeight="40" minWidth="225" styleClass="topButton" text="CARTES"/>
                <Button fx:id="dashboard" minHeight="40" minWidth="225" styleClass="topButton" text="DASHBOARD"/>
                <Button fx:id="stats" minHeight="40" minWidth="225" styleClass="topButton" text="STATISTIQUES"/>
            </HBox>
            <Separator>
                <padding>
                    <Insets top="10"/>
                </padding>
            </Separator>
        </VBox>
    </top>
    <right>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <TableView>
                    <columns>
                        <TableColumn prefWidth="75.0" text="C1"/>
                        <TableColumn prefWidth="75.0" text="C2"/>
                    </columns>
                </TableView>
            </children>
        </VBox>
    </right>
    <center>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
        </GridPane>
    </center>
    <bottom>
        <LineChart fx:id="lineChartStats" styleClass="styleLineChart" legendVisible="false" title="Magnitude moyenne par an" BorderPane.alignment="CENTER" horizontalGridLinesVisible="false" verticalGridLinesVisible="false">
            <xAxis>
                <CategoryAxis animated="false" label="ANNEE" side="BOTTOM" startMargin="2.0"/>
            </xAxis>
            <yAxis>
                <NumberAxis label="NB DE DEISME" side="LEFT"/>
            </yAxis>
        </LineChart>
    </bottom>
    <left>
        <BarChart fx:id="barChartStats" animated="false" categoryGap="0.0" legendVisible="false" rotate="90"
                  styleClass="styleBarChartStats1" title="Nombre de sÃ©isme par magnitude"
                  verticalGridLinesVisible="false" BorderPane.alignment="CENTER">
            <xAxis>
                <CategoryAxis animated="false" prefHeight="27.0" prefWidth="302.0" tickLabelGap="10.0"
                              tickLabelRotation="-90.0"/>
            </xAxis>
            <yAxis>
                <NumberAxis animated="false" side="RIGHT" tickLabelRotation="-90.0"/>
            </yAxis>
            <opaqueInsets>
                <Insets bottom="15.0"/>
            </opaqueInsets>
            <padding>
                <Insets bottom="15.0"/>
            </padding>
        </BarChart>
    </left>

</BorderPane>
